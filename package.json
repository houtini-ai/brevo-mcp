{
  "name": "@houtini/brevo-mcp",
  "version": "3.0.5",
  "description": "MCP (Model Context Protocol) server for Brevo email marketing platform with comprehensive analytics",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "brevo",
    "sendinblue",
    "email",
    "marketing",
    "analytics",
    "api",
    "claude",
    "ai",
    "houtini"
  ],
  "author": "Houtini Ltd <dev@houtini.ai> (https://houtini.ai)",
  "contributors": [
    "Richard Baxter <richard@richardbaxter.co>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/houtini-ai/brevo-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/houtini-ai/brevo-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/houtini-ai/brevo-mcp/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "brevo-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "prepublishOnly": "npm run lint && npm run build",
    "prepare": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@getbrevo/brevo": "^2.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0"
  },
  "overrides": {
    "form-data": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
